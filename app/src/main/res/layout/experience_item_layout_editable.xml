<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_4sdp"
    android:layout_margin="@dimen/_8sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/AddQualificationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/endLayout"
                android:gravity="center"
                android:layout_weight="6"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@android:color/black"
                    android:text="Expereience 1"
                    android:layout_weight="5"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="false" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/btnEditExp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/btnDeleteExp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_delete_forever_24"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <TextView
                android:id="@+id/schoolNameEDT_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:gravity="top"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                android:hint="University or school Name"
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:singleLine="false" />

            <TextView
                android:id="@+id/degreeNameEdt_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:gravity="top"
                android:textSize="@dimen/_12sdp"
                android:text="Degree title"
                android:textColor="@android:color/black"
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:singleLine="false" />

            <TextView
                android:id="@+id/scoreEdt_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:gravity="top"
                android:textSize="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:hint="score e.g 78% or CGPA"
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:singleLine="false" />

            <TextView
                android:id="@+id/completedOnEdt_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:gravity="top"
                android:textSize="@dimen/_12sdp"
                android:textColor="@android:color/black"
                android:hint="Completed in year e.g 2012"
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:singleLine="false" />

            <Button
                android:id="@+id/btn_update_explayout"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="3"
                android:background="@drawable/button_bg"
                android:text="Update"
                android:textColor="@android:color/white" />


        </LinearLayout>



    </RelativeLayout>
</androidx.cardview.widget.CardView>
