<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    tools:context="com.cvmaker.resumemaker.cvbuilder.resumebuilder.createcv.createresume.cvtemplate.fragmentsCV.PersonalInfoFragment">




        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Objective"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/textCountObj"
                android:gravity="end"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


        </LinearLayout>


            <EditText
                android:id="@+id/objectiveEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg"
                android:gravity="top"
                android:maxLength="300"
                android:layout_below="@id/linearTop"
                android:scrollbars="vertical"
                android:layout_margin="@dimen/_5sdp"
                android:hint="Write Your Resume Objective"
                android:padding="@dimen/_10sdp"
                android:singleLine="false" />


        <Button
            android:id="@+id/btn_save_ob"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_next_fragment"
            android:background="@drawable/button_bg"
            android:text="Next"
            android:paddingEnd="@dimen/_5sdp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="visible"
            android:paddingStart="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="@drawable/button_bg"
            android:text="Back"
            android:textColor="@android:color/white" />




</RelativeLayout>