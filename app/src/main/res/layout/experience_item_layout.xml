<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_4sdp"
    android:layout_margin="@dimen/_8sdp"
    >


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/endLayout"
            android:layout_toEndOf="@+id/itemCVImage"
            android:orientation="vertical">


            <TextView
                android:id="@+id/itemCName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Naveed's Resume"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/itemDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="10"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/itemToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Naveed"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/itemFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Naveed@gmail.com"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/endLayout"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/btnEditExp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginBottom="@dimen/_8sdp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:id="@+id/btnDeleteExp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:scaleType="fitXY"/>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
