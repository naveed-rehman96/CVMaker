<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cvmaker.resumemaker.cvbuilder.resumebuilder.createcv.createresume.cvtemplate.fragmentPreviewCv.BlueCreamCvFragment">




    <ImageButton
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/theme_blue"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnFullScreenPreview"
        android:layout_centerInParent="true"
        android:elevation="@dimen/_1sdp"
        android:visibility="gone"
        android:layout_margin="@dimen/_3sdp"
        android:layout_marginBottom="-15dp"
        android:src="@drawable/ic_baseline_fullscreen_24"/>

    <Button
        android:layout_width="@dimen/_65sdp"
        android:text="Next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnNextTemplate"
        android:drawableEnd="@drawable/ic_forwards"
        android:background="@drawable/button_bg"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="@dimen/_30sdp"/>
    <Button
        android:layout_width="@dimen/_65sdp"
        android:text="Back"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnBackTemplate"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="@drawable/button_bg"
        android:textColor="@android:color/white"
        android:layout_height="@dimen/_30sdp"/>


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnNextTemplate"
        android:id="@+id/WebView"/>


</RelativeLayout>