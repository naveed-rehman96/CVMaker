<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    tools:context="com.cvmaker.resumemaker.cvbuilder.resumebuilder.createcv.createresume.cvtemplate.fragmentsLetter.SentFromFragment">

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="5">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Sent From"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearTop">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/cnameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:hint="Full Name"
                android:maxLength="30"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/cDesignEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:hint="Designation"
                android:inputType="text"
                android:maxLength="30"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/cSubjectEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:hint="Subject"
                android:maxLength="50"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/cCompanyEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:hint="CompanyName"
                android:inputType="text"
                android:maxLength="30"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/cAddressEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:hint="Address"
                android:minLines="1"
                android:maxLines="10"
                android:inputType="textCapWords"
                android:padding="@dimen/_10sdp"
                android:maxLength="75"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/cPhoneEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="@dimen/_10sdp"
                android:maxLength="15"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/cEmailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_bg"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:maxLength="50"
                android:textColor="@android:color/black" />

            <RelativeLayout
                android:id="@+id/linearBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/button_bg"
                    android:text="Back"
                    android:layout_alignParentStart="true"
                    android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:visibility="gone"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_Next"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:drawableEnd="@drawable/ic_next_fragment"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:visibility="visible"
                    android:background="@drawable/button_bg"
                    android:text="Next"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:textColor="@android:color/white" />


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>